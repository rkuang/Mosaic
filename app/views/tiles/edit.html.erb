<h1 class='text-center'>Edit Tile</h1>

<div class="tile-wrapper form-preview">
  <div class="tile">
    <div class="tile-header">
      Author
    </div>
    <div class="tile-picture">
      <%= image_tag @tile.picture.url(:medium) %>
    </div>
    <div class="tile-footer">
      <div class="tile-description">
        <%= @tile.description %>
      </div>
    </div>
  </div>
</div>

<div class='row'>
  <div class='col-md-4 col-md-offset-4'>
    <div class='form-wrapper'>
      <%= simple_form_for @tile do |f| %>
        <%= f.input :picture %>
        <%= f.input :description %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>