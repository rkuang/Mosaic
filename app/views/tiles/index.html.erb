<div class="tile-wrapper">
  <% @all_tiles.each do |tile| %>
    <div class="tile">
      <div class="tile-header">
        Author
      </div>
      <div class="tile-picture">
        <%= link_to (image_tag tile.picture.url(:medium)), tile_path(tile) %>
      </div>
      <div class="tile-footer">
        <div class="tile-description">
          <%= tile.description %>
        </div>
      </div>
    </div>
  <% end %>
</div>