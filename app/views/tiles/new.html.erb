<% flash.each do |type, msg| %>
  <%= content_tag :div, msg, class:"alert alert-#{type} text-center" %>
<% end %>

<h1 class='text-center'>New Tile</h1>

<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <div class='form-wrapper'>
      <%= simple_form_for @tile do |f| %>
        <%= f.input :picture %>
        <%= f.input :description %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>